<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activity.SearchFriendActivity">


    <ListView
        android:id="@+id/my_friend_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="157dp"
        android:layout_marginBottom="227dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/no_friend"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="You haven't add any friends, click             to add more friends"
        android:textColor="@color/primaryGreen"
        android:textSize="22sp"
        android:visibility="invisible" >
    </TextView>

    <ImageButton
        android:id="@+id/add_friend_image"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_alignStart="@+id/no_friend"
        android:layout_alignTop="@+id/no_friend"
        android:layout_alignBottom="@+id/no_friend"
        android:layout_marginStart="51dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_with_radius"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/add_friend"
        android:visibility="invisible"
        android:clickable="false"/>

</RelativeLayout>