<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.activity.ProfileActivity">

    <ImageView
        android:id="@+id/profile_visit_user_img"
        android:layout_width="293dp"
        android:layout_height="210dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/visit_user_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_visit_user_img"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="39dp"
        android:gravity="center"
        android:text="Display User Name"
        android:textColor="@color/primaryGreen"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/decline_req_btn"
        android:layout_width="213dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="@drawable/button_with_radius"
        android:text="Decline Request"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/send_req_btn"
        android:layout_width="213dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="138dp"
        android:background="@drawable/button_with_radius"
        android:text="Send Friend Request"
        android:textColor="@color/white"
        android:textStyle="bold" />

</RelativeLayout>