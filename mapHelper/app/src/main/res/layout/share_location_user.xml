<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="345dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/users">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/shareLocationUser2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="118dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/default_avatar" />

        <TextView
            android:id="@+id/userName2"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/shareLocationUser2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/gradient_bg"
            android:gravity="center"
            android:text="User Not online"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/userStatus2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/userName2"
            android:layout_alignBottom="@+id/shareLocationUser2"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="-1dp"
            android:text="@string/offline"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="171dp"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/shareLocationUser1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:src="@drawable/default_avatar" />

            <TextView
                android:id="@+id/userStatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/shareLocationUser1"
                android:layout_marginStart="14dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@+id/shareLocationUser1"
                android:text="@string/offline"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/userName1"
                android:layout_width="114dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/shareLocationUser1"
                android:layout_marginStart="4dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/shareLocationUser1"
                android:background="@drawable/gradient_bg"
                android:gravity="center"
                android:text="User Not online"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>