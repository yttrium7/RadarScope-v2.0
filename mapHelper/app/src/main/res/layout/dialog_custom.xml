<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="9dp"
        android:layout_marginTop="11dp"
        app:srcCompat="@drawable/safe_message" />

    <TextView
        android:id="@+id/title"
        android:layout_width="267dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/imageView11"
        android:text="Do you want to choose a safe message receiver?"
        android:textColor="@color/primaryGreen"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="354dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView11"
        android:layout_alignEnd="@+id/title"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="-1dp"
        android:lineSpacingExtra="10dp"
        android:text="You can choose one of your friends who will receive SAFE MESSAGE once you are on the right route every 10 min."
        android:textColor="@color/grey"
        android:textSize="16sp" />

    <Button
        android:id="@+id/dialog_cancel"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView7"
        android:layout_alignStart="@+id/message"
        android:layout_alignEnd="@+id/message"
        android:layout_marginStart="21dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/button_with_radius"
        android:text="No, start my journey directly"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/dialog_confirm"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/dialog_cancel"
        android:layout_alignTop="@+id/dialog_cancel"
        android:layout_alignEnd="@+id/dialog_cancel"
        android:layout_marginStart="0dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="1dp"
        android:background="@drawable/button_with_radius"
        android:text="Choose my safe message receiver"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_below="@+id/dialog_confirm"
        android:layout_alignParentStart="true"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp" />

</RelativeLayout>
