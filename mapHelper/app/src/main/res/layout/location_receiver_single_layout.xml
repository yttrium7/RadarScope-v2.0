<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/location_receiver_single_layout">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/location_receiver_profile_layout"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/default_avatar" />

    <TextView
        android:id="@+id/location_receiver_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/location_receiver_profile_layout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="3dp"
        android:text="display name"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/location_receiver_text_layout"
        android:layout_width="212dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/location_receiver_profile_layout"
        android:layout_marginStart="18dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/location_receiver_profile_layout"
        android:background="@drawable/message_text_background_receiver"
        android:drawableLeft="@drawable/ic_location_on_white_24dp"
        android:onClick="sendToMap"
        android:padding="15dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/location_receiver_time_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/location_receiver_text_layout"
        android:layout_alignBottom="@+id/location_receiver_from"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="0dp"
        android:text="date" />
</RelativeLayout>